<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Qui suis-je ?"
        android:id="@+id/flashcard_question"
        android:textSize="40sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Bradley ST THOMAS"
        android:id="@+id/flashcard_Answer"
        android:layout_marginBottom="12dp"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_below="@+id/flashcard_question"
        android:clickable="true"
        android:background="@color/cardview_shadow_start_color"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Johnley ST THOMAS"
        android:id="@+id/reponse2"
        android:layout_marginBottom="12dp"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_below="@+id/flashcard_Answer"
        android:clickable="true"
        android:background="@color/cardview_shadow_start_color"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Jacky ST THOMAS"
        android:id="@+id/reponse3"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_below="@+id/reponse2"
        android:clickable="true"
        android:background="@color/cardview_shadow_start_color"/>






</RelativeLayout>