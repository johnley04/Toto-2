<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Qui suis-je ?"
        android:id="@+id/flashcard_question"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_margin="25sp"
        android:background="#F5F5F5"/>


    <ImageView
        android:id="@+id/ivToogleAnswers"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/baseline_visibility_off_24" />


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_above="@id/ivToogleAnswers"
    android:layout_centerHorizontal="true"
    android:visibility="gone"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Bradley ST THOMAS"
        android:id="@+id/flashcard_Answer"
        android:layout_marginBottom="12dp"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_below="@+id/flashcard_question"
        android:layout_margin="10sp"
        android:background="@color/cardview_shadow_start_color"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Johnley ST THOMAS"
        android:id="@+id/reponse2"
        android:layout_marginBottom="12dp"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_below="@+id/flashcard_Answer"
        android:clickable="true"
        android:layout_margin="10sp"
        android:background="@color/cardview_shadow_start_color"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Jacky ST THOMAS"
        android:id="@+id/reponse3"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_below="@+id/reponse2"
        android:clickable="true"
        android:layout_margin="10sp"
        android:background="@color/cardview_shadow_start_color"/>







</RelativeLayout>